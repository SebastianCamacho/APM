<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:UI.ViewModels"
             xmlns:model="clr-namespace:AppsielPrintManager.Core.Models;assembly=Core"
             x:Class="UI.Views.PrintersPage"
             Title="Impresoras"
             x:DataType="viewmodels:PrintersViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Añadir Impresora" Command="{Binding AddPrinterCommand}" IconImageSource="icono_anadir_impresora.svg" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid RowDefinitions="Auto, *" RowSpacing="10">
            <Label Grid.Row="0" Text="Gestión de Impresoras" 
                   Style="{StaticResource SubHeadline}"
                   HorizontalOptions="Center" VerticalOptions="Center"
                   Margin="0,10,0,10" />

            <CollectionView Grid.Row="1" ItemsSource="{Binding Printers}" SelectionMode="None"
                            Margin="10,0,10,0"> <!-- Margen horizontal para toda la lista -->
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center"
                                         Padding="20">
                        <Label Text="No hay impresoras configuradas." FontSize="Medium" TextColor="Gray" />
                        <Button Text="Añadir la primera impresora" Command="{Binding AddPrinterCommand}" Margin="10" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:PrinterSettings">
                        <SwipeView Margin="0,5,0,5"> <!-- Margen vertical entre ítems -->
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItemView Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PrintersViewModel}}, Path=EditPrinterCommand}"
                                                   CommandParameter="{Binding .}">
                                        <Grid BackgroundColor="LightBlue">
                                            <Label Text="Editar"
                                                   TextColor="White"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </SwipeItemView>
                                    <SwipeItemView Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PrintersViewModel}}, Path=DeletePrinterCommand}"
                                                   CommandParameter="{Binding .}">
                                        <Grid BackgroundColor="Red">
                                            <Label Text="Eliminar"
                                                   TextColor="White"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </SwipeItemView>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border StrokeShape="RoundRectangle 10" StrokeThickness="1"
                                    Stroke="{StaticResource Gray300}"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=DarkGray}">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PrintersViewModel}}, Path=EditPrinterCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                                <Grid ColumnDefinitions="Auto, *, Auto" Padding="15">
                                    <Image Grid.Column="0" Source="icono_impresora.png"
                                           HeightRequest="40" WidthRequest="40"
                                           VerticalOptions="Center" HorizontalOptions="Center"
                                           Margin="0,0,10,0" />
                                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="{Binding PrinterId}" FontAttributes="Bold" FontSize="Medium" TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                            <Border StrokeShape="RoundRectangle 4" BackgroundColor="{DynamicResource Primary}" Padding="5,0" VerticalOptions="Center">
                                                <Label Text="{Binding PrinterType}" FontSize="10" TextColor="White" FontAttributes="Bold" />
                                            </Border>
                                            <Border StrokeShape="RoundRectangle 4" Stroke="{StaticResource Gray400}" Padding="5,0" VerticalOptions="Center">
                                                <Label Text="{Binding ConnectionType}" FontSize="10" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                                            </Border>
                                        </HorizontalStackLayout>
                                        
                                        <!-- Detalles de Conexión Dinámicos -->
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="Conexión:" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" FontSize="Small" />
                                            <Label Text="{Binding IpAddress}" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" FontSize="Small">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ConnectionType}" Value="USB">
                                                        <Setter Property="IsVisible" Value="False" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                            <Label Text="{Binding Port, StringFormat=':{0}'}" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" FontSize="Small">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ConnectionType}" Value="USB">
                                                        <Setter Property="IsVisible" Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ConnectionType}" Value="IPP">
                                                        <Setter Property="IsVisible" Value="False" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                            <Label Text="{Binding LocalPrinterName}" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" FontSize="Small" IsVisible="False">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ConnectionType}" Value="USB">
                                                        <Setter Property="IsVisible" Value="True" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                            <Label Text="{Binding Uri}" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" FontSize="Small" IsVisible="False">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ConnectionType}" Value="IPP">
                                                        <Setter Property="IsVisible" Value="True" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </HorizontalStackLayout>

                                        <!-- Ancho de Papel (Solo Térmica) -->
                                        <Label Text="{Binding PaperWidthMm, StringFormat='Ancho: {0}mm'}" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" FontSize="Small" IsVisible="False">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding PrinterType}" Value="Térmica">
                                                    <Setter Property="IsVisible" Value="True" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </VerticalStackLayout>
                                    <ImageButton Grid.Column="2" Source="icono_eliminar_impresora.png"
                                                 Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PrintersViewModel}}, Path=DeletePrinterCommand}"
                                                 CommandParameter="{Binding .}"
                                                 HeightRequest="30" WidthRequest="30"
                                                 VerticalOptions="Center" HorizontalOptions="End"
                                                 BackgroundColor="Transparent" />
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <ActivityIndicator Grid.Row="2" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                               VerticalOptions="Center" HorizontalOptions="Center"
                               Color="{StaticResource Primary}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
